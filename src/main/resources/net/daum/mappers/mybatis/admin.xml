<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Admin">
  <!-- 관리자 정보 저장 -->
  <insert id="admin_in" parameterType="admin">
    insert into admin
        (admin_no, admin_id, admin_pwd, admin_name, admin_date)
    values
        (#{admin_no}, #{admin_id}, #{admin_pwd}, #{admin_name}, sysdate)
  </insert>
  
  <select id="admin_login" parameterType="java.lang.String" resultType="admin">
    select * from ADMIN where admin_id = #{admin_id}
  </select>
</mapper>